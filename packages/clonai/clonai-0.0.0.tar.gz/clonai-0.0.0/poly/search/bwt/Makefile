# Makefile for python interface for package bwt.
# File is generated by gopy. Do not edit.
# gopy build -output=poly/search/bwt -vm=python3 github.com/bebop/poly/search/bwt

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/opt/homebrew/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = "-I/opt/homebrew/opt/python@3.13/Frameworks/Python.framework/Versions/3.13/include/python3.13"
LDFLAGS = "-L/opt/homebrew/opt/python@3.13/Frameworks/Python.framework/Versions/3.13/lib" "-lpython3.13" -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make -vm=python3 github.com/bebop/poly/search/bwt

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm bwt.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w bwt.go
	# generate bwt_go$(LIBEXT) from bwt.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o bwt_go$(LIBEXT) bwt.go
	# use pybindgen to build the bwt.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _bwt$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated bwt.py python wrapper imports this c-code package
	
	$(GCC) bwt.c -dynamiclib bwt_go$(LIBEXT) -o _bwt$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


