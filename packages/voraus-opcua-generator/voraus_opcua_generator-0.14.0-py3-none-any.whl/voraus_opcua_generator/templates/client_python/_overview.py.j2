"""An autogenerated dictionary of node IDs and their full path in the represented OPC UA structure."""

nodes: dict[str, str] = {}

{% for node in nodes %}
{% if node.is_method_argument == False %}
nodes["{{node.data.nodeid}}"] = "{% if node.parent %}{{ node.parent.path | to_module }}.{% endif %}
{% if not node.is_object %}{{ node.data.displayname | snake_case | escape_keywords}}{% else %}{{ node.data.displayname | pascal_case }}{% endif %}"
{% endif %}
{% endfor %}

method_arguments: dict[str, list[str]] = {}

{% for node in nodes %}
{% if node.is_method %}
{% set arguments = [] %}
{% for item in node.get_input_arguments() %}
{% set _ = arguments.append('"{}"'.format(item.name_snake_case)) %}
{% endfor %}
method_arguments["{{node.data.nodeid}}"] = [{{ arguments | join(', ') }}]
{% endif %}
{% endfor %}
