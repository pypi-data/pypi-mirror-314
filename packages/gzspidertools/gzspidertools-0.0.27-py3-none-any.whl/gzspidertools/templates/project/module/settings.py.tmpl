from pathlib import Path

from gzspidertools.config import get_cfg
from loguru import logger

BOT_NAME = "$project_name"

SPIDER_MODULES = ["$project_name.spiders"]
NEWSPIDER_MODULE = "$project_name.spiders"

# Obey robots.txt rules
ROBOTSTXT_OBEY = False

# Set settings whose default value is deprecated to a future-proof value
TWISTED_REACTOR = "twisted.internet.asyncioreactor.AsyncioSelectorReactor"
FEED_EXPORT_ENCODING = "utf-8"

# Set .conf file path. Same as library default, commentable
_ = Path(__file__).parent
VIT_DIR = _ / "VIT"

# Log configuration example
LOG_LEVEL = "ERROR"
LOG_FILE = _ / "logs/$project_name.log"
logger.add(
    _ / "logs/error.log",
    level="ERROR",
    rotation="1 week",
    retention="7 days",
    enqueue=True,
)


_my_cfg = get_cfg()
redis_host = _my_cfg["my_add_redis"].get("host", "localhost")
redis_port = _my_cfg["my_add_redis"].getint("port", 6379)
redis_user = _my_cfg["my_add_redis"].get("user", None)
redis_password = _my_cfg["my_add_redis"].get("password", None)
if redis_user:
    REDIS_URL = f"redis://{redis_user}:{redis_port}@{redis_host}:{redis_port}/7"
else:
    REDIS_URL = f"redis://:{redis_port}@{redis_host}:{redis_port}/7"
