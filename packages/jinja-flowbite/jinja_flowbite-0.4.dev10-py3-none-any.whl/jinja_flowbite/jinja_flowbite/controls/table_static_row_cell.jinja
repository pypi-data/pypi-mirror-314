{% macro render(
    text=None,
    class="",
    row_span=1,
    col_span=1,
    word_wrap=False
) %}

{% set word_wrap_class = "" if word_wrap else "whitespace-nowrap" %}
<td class="p-2 font-normal align-top text-gray-500 dark:text-gray-400 {{ word_wrap_class }} {{ class }}" colspan={{col_span}} rowspan={{col_span}} >
    {% if text is not none %}
        {{ text }}
    {% else %}
        {{ caller() }}
    {% endif %}
</td>

{% endmacro %}