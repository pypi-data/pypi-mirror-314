<odoo>
    <record id="view_disable_partner_id_category_form" model="ir.ui.view">
        <field name="name">view.disable.partner.id.category.form</field>
        <field name="model">res.partner.id_category</field>
        <field
            name="inherit_id"
            ref="partner_identification.view_partner_id_category_form"
        />
        <field name="arch" type="xml">
            <field name="validation_code" position="before">
                <field name="check_number" />
            </field>
            <field name="validation_code" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('check_number', '=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
